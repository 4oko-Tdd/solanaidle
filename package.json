{
  "name": "solanaidle",
  "private": true,
  "scripts": {
    "dev": "pnpm --parallel --filter @solanaidle/api --filter @solanaidle/web run dev",
    "build": "pnpm --filter '@solanaidle/*' build",
    "lint": "pnpm --parallel --filter '@solanaidle/*' lint",
    "clean": "pnpm --parallel --filter '@solanaidle/*' clean"
  },
  "engines": {
    "node": ">=20"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "^19",
      "@types/react-dom": "^19"
    },
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "esbuild",
      "bufferutil",
      "utf-8-validate"
    ],
    "peerDependencyRules": {
      "allowAny": ["react", "react-dom"]
    }
  }
}
